	        	<div class="position-pointer-pourcentage">100%</div>
	        </div>

	        <!-- Attacking midfielder -->
	        <div class="position-pointer-container" style="top:240px;left:225px;">
	        	<div class="position-pointer">AM</div>
	        	<div class="position-pointer-pourcentage">100%</div>
	        </div>

	        <!-- Left striker -->
