<div class="admin-main-container">


	<%= render 'shared/vipnavbar'%>

	<div class="admin-right-frame">
		
		<%= render 'shared/viprightframeheader'%>

		<div class="admin-right-frame-content">

            <h2 class="fixtureindextest">All fixtures in DB</h2>

            <% @fixtures.each do |fixture| %>

                <div id="card-fixture-vip">
                    <div class="leftside">
                        <div class="small-grey-btn dustbin">
                            <%= link_to "üóë", fixture_path(fixture.id), method: :delete, data: { confirm: 'Are you sure you want to delete this fixture?' }%>
                        </div>
                        <div class="roundanddate">Round <%= fixture.round %> ‚Ä¢ <%= fixture.date %></div>
                    </div>
                    <div class="fixtureteams">
                        <div class="teamlisting hometeamlisting">
                            <%= fixture.hometeam.display_name %>
                        </div>
                        <div class="gamescorelisting">
                            <%if !fixture.scorehome.nil? && !fixture.scoreaway.nil? %>
                                <b><%= fixture.scorehome%> - <%= fixture.scoreaway%> </b>
                            <%else%>
                            vs.
                            <%end%>
                        </div>
                        <div class="teamlisting awayteamlisting">
                            <%= fixture.awayteam.display_name %>
                        </div>
                    </div>
                    <div class="rightside">
                        <div class="small-grey-btn kitbtn">
                            <%= link_to edit_fixture_path(fixture.id), target: :_blank do %>
                                Kit <%= fixture.homekit.nil? & fixture.awaykit.nil? ? "üî¥" : "üü¢" %>
                            <%end%>
                        </div>
                        <div class="small-grey-btn subbtn">
                            <%= link_to fixturegoals_fixture_path(fixture.id), target: :_blank do %>
                                Sub <%= fixture.submitted ? "üü¢" : "üî¥" %>
                            <%end%>
                        </div>
                        <div class="small-grey-btn fixturelinkbtn">
                            <%= link_to fixture_path(fixture.id), target: :_blank do %>
                                Open ‚ÜóÔ∏è
                            <%end%>
                        </div>
                    </div>
                </div><!-- card-fixture-vip -->
            <%end%>
		</div>
	</div>
</div>